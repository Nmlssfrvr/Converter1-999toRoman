<Window x:Class="ThreeDigit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreeDigit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Translate" Content="Перевести в римские цифры" HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Width="224" Click="Button_Click" FontSize="16"/>
        <TextBox x:Name="Rus" HorizontalAlignment="Center" Height="75" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="496" FontSize="20"  />
        <TextBox x:Name="Rim" HorizontalAlignment="Center" Height="75" Margin="0,284,0,0" Text="Здесь будут римские цифры" TextWrapping="Wrap" VerticalAlignment="Top" Width="496" FontSize="20"/>
        <Label Content="Впишите в поле ниже число от 1 до 999 на русском языке" HorizontalAlignment="Center" Height="36" Margin="0,46,0,0" VerticalAlignment="Top" Width="496" FontSize="18"/>

    </Grid>
</Window>
